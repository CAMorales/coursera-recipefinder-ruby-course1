<h1>Searching for - <%= @search_term %></h1>
<% if @recipes.nil? %>

<p>No information found for <%= @search_term %> </p>

<% else %>

<table border="1">
  <tr>
  	<th>Image</th>
  	<th>Title</th>
  	<th>Social Rank</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
      <td><%= link_to image_tag(recipe["image_url"], :size => "100x100"), recipe["f2f_url"] %></td>
      <td><%= link_to raw(recipe["title"]), recipe["f2f_url"] %></td>
      <td><%= recipe["social_rank"] %></td>
    </tr>
  <% end %>
</table>

<% end %>
